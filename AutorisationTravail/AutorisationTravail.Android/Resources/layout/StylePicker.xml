
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item>
    <layer-list>
      <item>
        <shape>
          <gradient
              android:angle="90"
              android:startColor="#FFFFFF"
              android:endColor="#FFFFFF" />
          <stroke
              android:width="1dp"
              android:color="#FFFFFF" />
          <corners
              android:radius="6dp" />
          <padding
              android:bottom="10dp"
              android:left="10dp"
              android:right="10dp"
              android:top="10dp" />
        </shape>
      </item>
      <item>
        <bitmap
            android:gravity="right|center"
            android:src="@drawable/down_arrow" />
      </item>
    </layer-list>
  </item>
</selector>