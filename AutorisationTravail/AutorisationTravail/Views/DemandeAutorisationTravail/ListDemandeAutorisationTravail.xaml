        <Label
            AbsoluteLayout.LayoutFlags="PositionProportional"
            FontAttributes="Bold"
            FontSize="20"
            Text="Demandes AT"
            TextColor="Black" />
    </NavigationPage.TitleView>
    <ContentPage.Content>
        <StackLayout BackgroundColor="White">
