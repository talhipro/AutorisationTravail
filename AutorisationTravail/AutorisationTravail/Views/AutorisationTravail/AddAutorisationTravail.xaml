<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AutorisationTravail.Views.AutorisationTravail.AddAutorisationTravail"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    NavigationPage.HasNavigationBar="False"
    mc:Ignorable="d">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <!--#region Version Tablet-->
                <StackLayout Padding="0,0,0,20">
                    <StackLayout.IsVisible>
                        <OnIdiom
                            x:TypeArguments="x:Boolean"
                            Phone="False"
                            Tablet="True" />
                    </StackLayout.IsVisible>
                    <StackLayout x:Name="Header">
                        <Frame BackgroundColor="#fcb32a" HasShadow="False">
                            <Grid>
                                <Grid.Padding>
                                    <OnPlatform x:TypeArguments="Thickness">
                                        <On Platform="iOS" Value="0, 11, 8, 0" />
                                    </OnPlatform>
                                </Grid.Padding>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <StackLayout
                                    Grid.Column="0"
                                    Margin="0"
                                    VerticalOptions="Center">
                                    <Label
                                        Margin="35,0,0,0"
                                        FontAttributes="Bold"
                                        FontSize="35"
                                        HorizontalOptions="Center"
                                        Text="Nouvelle Autorisation de Travail"
                                        TextColor="White">
                                        <Label.FontSize>
                                            <OnIdiom
                                                x:TypeArguments="x:Double"
                                                Phone="26"
                                                Tablet="35" />
                                        </Label.FontSize>
                                    </Label>
                                </StackLayout>
                            </Grid>
                        </Frame>
                    </StackLayout>

                    <StackLayout Margin="15">
                        <!--#region  #Formulaire Section 1-->
                        <Grid ColumnSpacing="10" RowSpacing="30">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width=".33*" />
                                <ColumnDefinition Width=".33*" />
                                <ColumnDefinition Width=".33*" />
                            </Grid.ColumnDefinitions>
                            <StackLayout
                                Grid.Row="0"
                                Grid.Column="0"
                                Orientation="Vertical">
                                <Label
                                    FontAttributes="Bold"
                                    FontSize="20"
                                    Text="Site"
                                    TextColor="Black" />
                                <Frame
                                    Padding="0"
                                    BackgroundColor="#dbdbdb"
                                    CornerRadius="0">
                                    <Picker Title="Choisir un Site">
                                        <Picker.ItemsSource>
                                            <x:Array Type="{x:Type x:String}">
                                                <x:String>Site 1</x:String>
                                                <x:String>Site 2</x:String>
                                                <x:String>Site 3</x:String>
                                                <x:String>Site 4</x:String>
                                                <x:String>Site 5</x:String>
                                            </x:Array>
                                        </Picker.ItemsSource>
                                    </Picker>
                                </Frame>
                            </StackLayout>
                            <StackLayout
                                Grid.Row="0"
                                Grid.Column="1"
                                Orientation="Vertical">
                                <Label
                                    FontAttributes="Bold"
                                    FontSize="20"
                                    Text="Entité"
                                    TextColor="Black" />
                                <Frame
                                    Padding="0"
                                    BackgroundColor="#dbdbdb"
                                    CornerRadius="0">
                                    <Picker Title="Choisir une Entité">
                                        <Picker.ItemsSource>
                                            <x:Array Type="{x:Type x:String}">
                                                <x:String>Entité 1</x:String>
                                                <x:String>Entité 2</x:String>
                                                <x:String>Entité 3</x:String>
                                                <x:String>Entité 4</x:String>
                                                <x:String>Entité 5</x:String>
                                            </x:Array>
                                        </Picker.ItemsSource>
                                    </Picker>
                                </Frame>
                            </StackLayout>
                            <StackLayout
                                Grid.Row="0"
                                Grid.Column="2"
                                Orientation="Vertical">
                                <Label
                                    FontAttributes="Bold"
                                    FontSize="20"
                                    Text="AT №"
                                    TextColor="Black" />
                                <Frame
                                    Padding="0"
                                    BackgroundColor="#dbdbdb"
                                    CornerRadius="0">

                                    <Entry HorizontalOptions="FillAndExpand" />
                                </Frame>
                            </StackLayout>

                            <StackLayout
                                Grid.Row="1"
                                Grid.Column="0"
                                Orientation="Vertical">
                                <Label
                                    FontAttributes="Bold"
                                    FontSize="20"
                                    Text="DI №"
                                    TextColor="Black" />
                                <Frame
                                    Padding="0"
                                    BackgroundColor="#dbdbdb"
                                    CornerRadius="0">
                                    <Entry HorizontalOptions="FillAndExpand" />
                                </Frame>
                            </StackLayout>
                            <StackLayout
                                Grid.Row="1"
                                Grid.Column="1"
                                Orientation="Vertical">
                                <Label
                                    FontAttributes="Bold"
                                    FontSize="20"
                                    Text="OT №"
                                    TextColor="Black" />
                                <Frame
                                    Padding="0"
                                    BackgroundColor="#dbdbdb"
                                    CornerRadius="0">
                                    <Entry HorizontalOptions="FillAndExpand" />
                                </Frame>
                            </StackLayout>
                            <StackLayout
                                Grid.Row="1"
                                Grid.Column="2"
                                Orientation="Vertical">
                                <Label
                                    FontAttributes="Bold"
                                    FontSize="20"
                                    Text="BT №"
                                    TextColor="Black" />
                                <Frame
                                    Padding="0"
                                    BackgroundColor="#dbdbdb"
                                    CornerRadius="0">

                                    <Entry HorizontalOptions="FillAndExpand" />
                                </Frame>
                            </StackLayout>

                            <StackLayout
                                Grid.Row="2"
                                Grid.Column="0"
                                Orientation="Vertical">
                                <Label
                                    FontAttributes="Bold"
                                    FontSize="20"
                                    Text="Lieu d'intervention"
                                    TextColor="Black" />
                                <Frame
                                    Padding="0"
                                    BackgroundColor="#dbdbdb"
                                    CornerRadius="0">
                                    <Entry HorizontalOptions="FillAndExpand" />
                                </Frame>
                            </StackLayout>
                            <StackLayout
                                Grid.Row="2"
                                Grid.Column="1"
                                Orientation="Vertical">
                                <Label
                                    FontAttributes="Bold"
                                    FontSize="20"
                                    Text="Services intervenants"
                                    TextColor="Black" />
                                <Frame
                                    Padding="0"
                                    BackgroundColor="#dbdbdb"
                                    CornerRadius="0">
                                    <Picker Title="Choisir un Service">
                                        <Picker.ItemsSource>
                                            <x:Array Type="{x:Type x:String}">
                                                <x:String>Service 1</x:String>
                                                <x:String>Service 2</x:String>
                                                <x:String>Service 3</x:String>
                                                <x:String>Service 4</x:String>
                                                <x:String>Service 5</x:String>
                                            </x:Array>
                                        </Picker.ItemsSource>
                                    </Picker>
                                </Frame>
                            </StackLayout>
                            <StackLayout
                                Grid.Row="2"
                                Grid.Column="2"
                                Orientation="Vertical">
                                <Label
                                    FontAttributes="Bold"
                                    FontSize="20"
                                    Text="Entreprises intervenants"
                                    TextColor="Black" />
                                <Frame
                                    Padding="0"
                                    BackgroundColor="#dbdbdb"
                                    CornerRadius="0">

                                    <Entry HorizontalOptions="FillAndExpand" />
                                </Frame>
                            </StackLayout>
                        </Grid>
                        <!--  #EndFormulaire Section 1  -->

                        <!--  #Formulaire Section 2  -->
                        <Grid Margin="0,30,0,0" ColumnSpacing="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width=".5*" />
                                <ColumnDefinition Width=".5*" />
                            </Grid.ColumnDefinitions>
                            <StackLayout Grid.Column="0" Orientation="Vertical">
                                <Label
                                    FontAttributes="Bold"
                                    FontSize="20"
                                    Text="Description de l'intervention"
                                    TextColor="Black" />
                                <Frame
                                    Padding="0"
                                    BackgroundColor="#dbdbdb"
                                    CornerRadius="0"
                                    VerticalOptions="FillAndExpand">
                                    <Editor HorizontalOptions="FillAndExpand" />
                                </Frame>
                            </StackLayout>
                            <StackLayout Grid.Column="1" Orientation="Vertical">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width=".5*" />
                                        <ColumnDefinition Width=".5*" />
                                    </Grid.ColumnDefinitions>
                                    <StackLayout
                                        Grid.Row="0"
                                        Grid.Column="0"
                                        Grid.ColumnSpan="2">
                                        <Label
                                            FontAttributes="Bold"
                                            FontSize="20"
                                            Text="Date de l'intervention"
                                            TextColor="Black" />
                                        <Frame
                                            Padding="0"
                                            BackgroundColor="#dbdbdb"
                                            CornerRadius="0">
                                            <DatePicker HorizontalOptions="FillAndExpand" />
                                        </Frame>
                                    </StackLayout>
                                    <StackLayout Grid.Row="1" Grid.Column="0">
                                        <Label
                                            FontAttributes="Bold"
                                            FontSize="20"
                                            Text="Heure début"
                                            TextColor="Black" />
                                        <Frame
                                            Padding="0"
                                            BackgroundColor="#dbdbdb"
                                            CornerRadius="0">
                                            <TimePicker HorizontalOptions="FillAndExpand" />
                                        </Frame>
                                    </StackLayout>
                                    <StackLayout Grid.Row="1" Grid.Column="1">
                                        <Label
                                            FontAttributes="Bold"
                                            FontSize="20"
                                            Text="Heure fin (prévu)"
                                            TextColor="Black" />
                                        <Frame
                                            Padding="0"
                                            BackgroundColor="#dbdbdb"
                                            CornerRadius="0">
                                            <TimePicker HorizontalOptions="FillAndExpand" />
                                        </Frame>
                                    </StackLayout>
                                </Grid>
                            </StackLayout>
                        </Grid>
                        <!--  #EndFormulaire Section 2  -->
                    </StackLayout>

                    <StackLayout x:Name="Risques" Margin="15">
                        <StackLayout
                            x:Name="RisquesHeader"
                            Margin="0,0,0,10"
                            Orientation="Horizontal">
                            <Label
                                FontAttributes="Bold"
                                FontSize="20"
                                Text="Risques évalués liés à / au"
                                TextColor="Black"
                                VerticalOptions="Center" />
                            <Frame
                                Padding="0"
                                BackgroundColor="#fcb32a"
                                CornerRadius="20"
                                HasShadow="False"
                                HorizontalOptions="EndAndExpand"
                                WidthRequest="40">
                                <Image Source="add.png">
                                    <Image.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="AddRisques_Tapped" />
                                    </Image.GestureRecognizers>
                                </Image>
                            </Frame>
                        </StackLayout>
                        <StackLayout x:Name="RisquesSelected" HeightRequest="90">
                            <Frame
                                Padding="0"
                                BackgroundColor="Transparent"
                                CornerRadius="5"
                                HorizontalOptions="FillAndExpand"
                                VerticalOptions="Center">
                                <StackLayout Orientation="Vertical">
                                    <CollectionView SelectionMode="Multiple">
                                        <CollectionView.ItemsSource>
                                            <x:Array Type="{x:Type x:String}">
                                                <x:String>Proximité aux réseaux enterrés</x:String>
                                                <x:String>Produits inflammatables</x:String>
                                                <x:String>Bruit (&gt; 80 dB)</x:String>
                                                <x:String>Circulation personnes</x:String>
                                            </x:Array>
                                        </CollectionView.ItemsSource>
                                        <CollectionView.ItemsLayout>
                                            <GridItemsLayout
                                                HorizontalItemSpacing="5"
                                                Orientation="Vertical"
                                                Span="3"
                                                VerticalItemSpacing="10" />
                                        </CollectionView.ItemsLayout>
                                        <CollectionView.ItemTemplate>
                                            <DataTemplate>
                                                <Frame
                                                    Padding="10"
                                                    BackgroundColor="#FFFFFF"
                                                    BorderColor="#979797"
                                                    CornerRadius="3"
                                                    HasShadow="False"
                                                    VerticalOptions="Center">
                                                    <StackLayout Orientation="Horizontal">
                                                        <Label
                                                            HorizontalOptions="Center"
                                                            Text="{Binding}"
                                                            TextColor="#979797"
                                                            VerticalOptions="Center" />
                                                        <Frame
                                                            Padding="0"
                                                            BackgroundColor="Red"
                                                            CornerRadius="20"
                                                            HasShadow="False"
                                                            HorizontalOptions="EndAndExpand"
                                                            VerticalOptions="Center"
                                                            WidthRequest="20">
                                                            <Image Source="close.png" />
                                                        </Frame>
                                                    </StackLayout>
                                                </Frame>
                                            </DataTemplate>
                                        </CollectionView.ItemTemplate>
                                    </CollectionView>
                                </StackLayout>
                            </Frame>
                        </StackLayout>
                    </StackLayout>

                    <StackLayout x:Name="Mesures" Margin="15">
                        <StackLayout
                            x:Name="MesuresHeader"
                            Margin="0,0,0,10"
                            Orientation="Horizontal">
                            <Label
                                FontAttributes="Bold"
                                FontSize="20"
                                Text="Mesures prises pour préparer l'intervention"
                                TextColor="Black"
                                VerticalOptions="Center" />
                            <Frame
                                Padding="0"
                                BackgroundColor="#fcb32a"
                                CornerRadius="20"
                                HasShadow="False"
                                HorizontalOptions="EndAndExpand"
                                WidthRequest="40">
                                <Image Source="add.png">
                                    <Image.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="AddMesures_Tapped" />
                                    </Image.GestureRecognizers>
                                </Image>
                            </Frame>
                        </StackLayout>
                        <StackLayout x:Name="MesuresSelected" HeightRequest="90">
                            <Frame
                                Padding="0"
                                BackgroundColor="Transparent"
                                CornerRadius="5"
                                HorizontalOptions="FillAndExpand"
                                VerticalOptions="Center">
                                <StackLayout Orientation="Vertical">
                                    <CollectionView SelectionMode="Multiple">
                                        <CollectionView.ItemsSource>
                                            <x:Array Type="{x:Type x:String}">
                                                <x:String>Vidange de l'équipement et ses circuits</x:String>
                                                <x:String>Eclairage</x:String>
                                            </x:Array>
                                        </CollectionView.ItemsSource>
                                        <CollectionView.ItemsLayout>
                                            <GridItemsLayout
                                                HorizontalItemSpacing="5"
                                                Orientation="Vertical"
                                                Span="3"
                                                VerticalItemSpacing="10" />
                                        </CollectionView.ItemsLayout>
                                        <CollectionView.ItemTemplate>
                                            <DataTemplate>
                                                <Frame
                                                    Padding="10"
                                                    BackgroundColor="#FFFFFF"
                                                    BorderColor="#979797"
                                                    CornerRadius="3"
                                                    HasShadow="False"
                                                    VerticalOptions="Center">
                                                    <StackLayout Orientation="Horizontal">
                                                        <Label
                                                            HorizontalOptions="Center"
                                                            Text="{Binding}"
                                                            TextColor="#979797"
                                                            VerticalOptions="Center" />
                                                        <Frame
                                                            Padding="0"
                                                            BackgroundColor="Red"
                                                            CornerRadius="20"
                                                            HasShadow="False"
                                                            HorizontalOptions="EndAndExpand"
                                                            VerticalOptions="Center"
                                                            WidthRequest="20">
                                                            <Image Source="close.png" />
                                                        </Frame>
                                                    </StackLayout>
                                                </Frame>
                                            </DataTemplate>
                                        </CollectionView.ItemTemplate>
                                    </CollectionView>
                                </StackLayout>
                            </Frame>
                        </StackLayout>
                    </StackLayout>

                    <StackLayout x:Name="MoyensAcces" Margin="15">
                        <StackLayout
                            x:Name="MoyensAccesHeader"
                            Margin="0,0,0,10"
                            Orientation="Horizontal">
                            <Label
                                FontAttributes="Bold"
                                FontSize="20"
                                Text="Moyens d'accés nécessaires"
                                TextColor="Black"
                                VerticalOptions="Center" />
                            <Frame
                                Padding="0"
                                BackgroundColor="#fcb32a"
                                CornerRadius="20"
                                HasShadow="False"
                                HorizontalOptions="EndAndExpand"
                                WidthRequest="40">
                                <Image Source="add.png">
                                    <Image.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="AddMoyensAcces_Tapped" />
                                    </Image.GestureRecognizers>
                                </Image>
                            </Frame>
                        </StackLayout>
                        <StackLayout x:Name="MoyensAccesSelected" HeightRequest="90">
                            <Frame
                                Padding="0"
                                BackgroundColor="Transparent"
                                CornerRadius="5"
                                HorizontalOptions="FillAndExpand"
                                VerticalOptions="Center">
                                <StackLayout Orientation="Vertical">
                                    <CollectionView SelectionMode="Multiple">
                                        <CollectionView.ItemsSource>
                                            <x:Array Type="{x:Type x:String}">
                                                <x:String>Escabeau</x:String>
                                                <x:String>Nacelle, PEMP</x:String>
                                            </x:Array>
                                        </CollectionView.ItemsSource>
                                        <CollectionView.ItemsLayout>
                                            <GridItemsLayout
                                                HorizontalItemSpacing="5"
                                                Orientation="Vertical"
                                                Span="3"
                                                VerticalItemSpacing="10" />
                                        </CollectionView.ItemsLayout>
                                        <CollectionView.ItemTemplate>
                                            <DataTemplate>
                                                <Frame
                                                    Padding="10"
                                                    BackgroundColor="#FFFFFF"
                                                    BorderColor="#979797"
                                                    CornerRadius="3"
                                                    HasShadow="False"
                                                    VerticalOptions="Center">
                                                    <StackLayout Orientation="Horizontal">
                                                        <Label
                                                            HorizontalOptions="Center"
                                                            Text="{Binding}"
                                                            TextColor="#979797"
                                                            VerticalOptions="Center" />
                                                        <Frame
                                                            Padding="0"
                                                            BackgroundColor="Red"
                                                            CornerRadius="20"
                                                            HasShadow="False"
                                                            HorizontalOptions="EndAndExpand"
                                                            VerticalOptions="Center"
                                                            WidthRequest="20">
                                                            <Image Source="close.png" />
                                                        </Frame>
                                                    </StackLayout>
                                                </Frame>
                                            </DataTemplate>
                                        </CollectionView.ItemTemplate>
                                    </CollectionView>
                                </StackLayout>
                            </Frame>
                        </StackLayout>
                    </StackLayout>

                    <StackLayout x:Name="EPI" Margin="15">
                        <StackLayout
                            x:Name="EPIHeader"
                            Margin="0,0,0,10"
                            Orientation="Horizontal">
                            <Label
                                FontAttributes="Bold"
                                FontSize="20"
                                Text="EPI spécifiques nécessaires"
                                TextColor="Black"
                                VerticalOptions="Center" />
                            <Frame
                                Padding="0"
                                BackgroundColor="#fcb32a"
                                CornerRadius="20"
                                HasShadow="False"
                                HorizontalOptions="EndAndExpand"
                                WidthRequest="40">
                                <Image Source="add.png">
                                    <Image.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="AddEPI_Tapped" />
                                    </Image.GestureRecognizers>
                                </Image>
                            </Frame>
                        </StackLayout>
                        <StackLayout x:Name="EPISelected" HeightRequest="90">
                            <Frame
                                Padding="0"
                                BackgroundColor="Transparent"
                                CornerRadius="5"
                                HorizontalOptions="FillAndExpand"
                                VerticalOptions="Center">
                                <StackLayout Orientation="Vertical">
                                    <CollectionView SelectionMode="Multiple">
                                        <CollectionView.ItemsSource>
                                            <x:Array Type="{x:Type x:String}">
                                                <x:String>Casque soudure</x:String>
                                                <x:String>Masque à gaz</x:String>
                                                <x:String>Guêtres</x:String>
                                                <x:String>Ecran facial</x:String>
                                            </x:Array>
                                        </CollectionView.ItemsSource>
                                        <CollectionView.ItemsLayout>
                                            <GridItemsLayout
                                                HorizontalItemSpacing="5"
                                                Orientation="Vertical"
                                                Span="3"
                                                VerticalItemSpacing="10" />
                                        </CollectionView.ItemsLayout>
                                        <CollectionView.ItemTemplate>
                                            <DataTemplate>
                                                <Frame
                                                    Padding="10"
                                                    BackgroundColor="#FFFFFF"
                                                    BorderColor="#979797"
                                                    CornerRadius="3"
                                                    HasShadow="False"
                                                    VerticalOptions="Center">
                                                    <StackLayout Orientation="Horizontal">
                                                        <Label
                                                            HorizontalOptions="Center"
                                                            Text="{Binding}"
                                                            TextColor="#979797"
                                                            VerticalOptions="Center" />
                                                        <Frame
                                                            Padding="0"
                                                            BackgroundColor="Red"
                                                            CornerRadius="20"
                                                            HasShadow="False"
                                                            HorizontalOptions="EndAndExpand"
                                                            VerticalOptions="Center"
                                                            WidthRequest="20">
                                                            <Image Source="close.png" />
                                                        </Frame>
                                                    </StackLayout>
                                                </Frame>
                                            </DataTemplate>
                                        </CollectionView.ItemTemplate>
                                    </CollectionView>
                                </StackLayout>
                            </Frame>
                        </StackLayout>
                    </StackLayout>

                    <StackLayout x:Name="Permis" Margin="15">
                        <StackLayout
                            x:Name="PermisHeader"
                            Margin="0,0,0,10"
                            Orientation="Horizontal">
                            <Label
                                FontAttributes="Bold"
                                FontSize="20"
                                Text="Permis nécessaires"
                                TextColor="Black"
                                VerticalOptions="Center" />
                            <Frame
                                Padding="0"
                                BackgroundColor="#fcb32a"
                                CornerRadius="20"
                                HasShadow="False"
                                HorizontalOptions="EndAndExpand"
                                WidthRequest="40">
                                <Image Source="add.png">
                                    <Image.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="AddPermis_Tapped" />
                                    </Image.GestureRecognizers>
                                </Image>
                            </Frame>
                        </StackLayout>
                        <StackLayout x:Name="PermisSelected" HeightRequest="90">
                            <Frame
                                Padding="0"
                                BackgroundColor="Transparent"
                                CornerRadius="5"
                                HorizontalOptions="FillAndExpand"
                                VerticalOptions="Center">
                                <StackLayout Orientation="Vertical">
                                    <CollectionView SelectionMode="Multiple">
                                        <CollectionView.ItemsSource>
                                            <x:Array Type="{x:Type x:String}">
                                                <x:String>Permis pour espace confiné</x:String>
                                                <x:String>Permis pour travail en hauteur</x:String>
                                                <x:String>Permis de feu</x:String>
                                            </x:Array>
                                        </CollectionView.ItemsSource>
                                        <CollectionView.ItemsLayout>
                                            <GridItemsLayout
                                                HorizontalItemSpacing="5"
                                                Orientation="Vertical"
                                                Span="3"
                                                VerticalItemSpacing="10" />
                                        </CollectionView.ItemsLayout>
                                        <CollectionView.ItemTemplate>
                                            <DataTemplate>
                                                <Frame
                                                    Padding="10"
                                                    BackgroundColor="#FFFFFF"
                                                    BorderColor="#979797"
                                                    CornerRadius="3"
                                                    HasShadow="False"
                                                    VerticalOptions="Center">
                                                    <StackLayout Orientation="Horizontal">
                                                        <Label
                                                            HorizontalOptions="Center"
                                                            Text="{Binding}"
                                                            TextColor="#979797"
                                                            VerticalOptions="Center" />
                                                        <Frame
                                                            Padding="0"
                                                            BackgroundColor="Red"
                                                            CornerRadius="20"
                                                            HasShadow="False"
                                                            HorizontalOptions="EndAndExpand"
                                                            VerticalOptions="Center"
                                                            WidthRequest="20">
                                                            <Image Source="close.png" />
                                                        </Frame>
                                                    </StackLayout>
                                                </Frame>
                                            </DataTemplate>
                                        </CollectionView.ItemTemplate>
                                    </CollectionView>
                                </StackLayout>
                            </Frame>
                        </StackLayout>
                    </StackLayout>

                    <!--#region Save Button-->
                    <StackLayout VerticalOptions="End">
                        <StackLayout.Margin>
                            <OnIdiom
                                x:TypeArguments="Thickness"
                                Phone="10"
                                Tablet="15" />
                        </StackLayout.Margin>
                        <Button
                            BackgroundColor="#B2B6BF"
                            CornerRadius="5"
                            FontAttributes="Bold"
                            FontSize="26"
                            HeightRequest="70"
                            Text="Sauvegarder le Brouillon"
                            TextColor="White"
                            VerticalOptions="Center">
                            <Button.FontSize>
                                <OnIdiom
                                    x:TypeArguments="x:Double"
                                    Phone="20"
                                    Tablet="26" />
                            </Button.FontSize>
                            <Button.HeightRequest>
                                <OnIdiom
                                    x:TypeArguments="x:Double"
                                    Phone="50"
                                    Tablet="70" />
                            </Button.HeightRequest>
                        </Button>
                        <Button
                            BackgroundColor="#fcb32a"
                            CornerRadius="5"
                            FontAttributes="Bold"
                            FontSize="26"
                            HeightRequest="70"
                            Text="Envoyer"
                            TextColor="White"
                            VerticalOptions="Center">
                            <Button.FontSize>
                                <OnIdiom
                                    x:TypeArguments="x:Double"
                                    Phone="20"
                                    Tablet="26" />
                            </Button.FontSize>
                            <Button.HeightRequest>
                                <OnIdiom
                                    x:TypeArguments="x:Double"
                                    Phone="50"
                                    Tablet="70" />
                            </Button.HeightRequest>
                        </Button>
                    </StackLayout>
                    <!--#endregion-->

                </StackLayout>
                <!--#endregion-->

                <!--#region Version Mobile-->
